{% extends 'base.html.twig' %}

{% block title %}Hello PanelController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Hello {{ user.username }}<span class="text-muted">#{{ user.discriminator }}</span>!</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Snippet name</th>
                <th>Snippet language</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for snippet in snippets %}
                <tr>
                    <td><code>{{ snippet.name }}</code></td>
                    <td>{{ snippet.language.name }}</td>
                    <td><a href="{{ path('details', {'snippet': snippet.id}) }}">Details Â»</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
