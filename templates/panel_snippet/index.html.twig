{% extends 'base.html.twig' %}

{% block title %}Hello PanelController!{% endblock %}

{% block body %}
    <h1 class="mb-4">Hello {{ user.username }}<span class="text-muted">#{{ user.discriminator }}</span>!</h1>
    <div class="mb-4">
        <a class="btn btn-success" href="{{ path('snippet_add') }}">New snippet +</a>
        <a class="btn btn-outline-primary" href="{{ path('language_panel') }}">Show languages</a>
    </div>
    <table class="table table-dark">
        <thead>
        <tr>
            <th>Snippet name</th>
            <th>Snippet language</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for snippet in snippets %}
            <tr>
                <td><code>{{ snippet.name }}</code></td>
                <td>{{ snippet.language.name }}</td>
                <td><a href="{{ path('snippet_details', {'snippet': snippet.id}) }}">Details Â»</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
